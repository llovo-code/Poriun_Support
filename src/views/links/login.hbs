<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="p-1">
                            <input type="text" name="title" class="form-control" id="" placeholder="Title" autofocus >
                        </div>
                        <div class="p-1">
                            <input type="url" name="url" placeholder="URL" class="form-control">
                        </div>
                        <div class="p-1">
                            <textarea name="description" class="form-control" id="" cols="2" rows="4" placeholder="Description"></textarea>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-success w-100">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>